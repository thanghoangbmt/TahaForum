        <servlet-name>AdminSearchArticleController</servlet-name>
        <url-pattern>/AdminSearchArticleController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>DataSource connect to DB</description>
        <res-ref-name>DBCon</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>hello.jsp</welcome-file>
        <welcome-file>IndexController</welcome-file>
    </welcome-file-list>
</web-app>
