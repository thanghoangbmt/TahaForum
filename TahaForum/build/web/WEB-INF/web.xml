<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>thangha.filters.SecurityFilter</filter-class>
    </filter>
    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>thangha.filters.NoCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>thangha.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>thangha.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>thangha.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>thangha.controllers.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>thangha.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificationController</servlet-name>
        <servlet-class>thangha.controllers.VerificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>thangha.controllers.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostNewArticleController</servlet-name>
        <servlet-class>thangha.controllers.PostNewArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewArticleDetailsController</servlet-name>
        <servlet-class>thangha.controllers.ViewArticleDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostCommentController</servlet-name>
        <servlet-class>thangha.controllers.PostCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaginationController</servlet-name>
        <servlet-class>thangha.controllers.PaginationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateVerificationCodeController</servlet-name>
        <servlet-class>thangha.controllers.CreateVerificationCodeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminArticleIndexController</servlet-name>
        <servlet-class>thangha.controllers.AdminArticleIndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminArticlePaginationController</servlet-name>
        <servlet-class>thangha.controllers.AdminArticlePaginationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminViewArticleDetailsController</servlet-name>
        <servlet-class>thangha.controllers.AdminViewArticleDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminApproveArticleController</servlet-name>
        <servlet-class>thangha.controllers.AdminApproveArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDeleteArticleController</servlet-name>
        <servlet-class>thangha.controllers.AdminDeleteArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSearchArticleController</servlet-name>
        <servlet-class>thangha.controllers.AdminSearchArticleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/IndexController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificationController</servlet-name>
        <url-pattern>/VerificationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostNewArticleController</servlet-name>
        <url-pattern>/PostNewArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewArticleDetailsController</servlet-name>
        <url-pattern>/ViewArticleDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostCommentController</servlet-name>
        <url-pattern>/PostCommentController</url-pattern>
